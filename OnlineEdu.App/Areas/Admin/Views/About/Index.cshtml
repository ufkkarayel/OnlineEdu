@using OnlineEdu.App.DTOs.AboutDtos
@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Hakkımda Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Resim 1</th>
        <th>Resim 2</th>
        <th>Açıklama</th>
        <th>Madde 1</th>
        <th>Madde 2</th>
        <th>Madde 3</th>
        <th>Madde 4</th>        
        <th>Sil</th>        
        <th>Güncelle</th>        
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl1" alt=""  style="height:75px;width:75px"/></td>                          
            <td><img src="@item.ImageUrl2" alt=""  style="height:75px;width:75px"/></td>                          
            <td>@item.Description</td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Item4</td>
            <td>
                <a asp-action="DeleteAbout" asp-controller="About" asp-area="Admin" asp-route-id="@item.AboutID" class="btn btn-outline-danger">Sil</a>
            </td>
            <td>
                <a asp-action="UpdateAbout" asp-controller="About" asp-area="Admin" asp-route-id="@item.AboutID" class="btn btn-outline-success">Güncelle</a>
            </td>
           
        </tr>
    }
</table>

<br />
<a asp-action="CreateAbout" asp-controller="About" asp-area="Admin" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>


