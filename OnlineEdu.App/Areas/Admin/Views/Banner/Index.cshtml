@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>     
        <th>Resim</th>     
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" alt="" style="height:75px;width:75px" /></td>        
            <td>
                <a asp-action="DeleteBanner" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.BannerId" class="btn btn-outline-danger">Sil</a>
            </td>
            <td>
                <a asp-action="UpdateBanner" asp-controller="Banner" asp-area="Admin" asp-route-id="@item.BannerId" class="btn btn-outline-success">Güncelle</a>
            </td>

        </tr>
    }
</table>
<br />
<a asp-action="CreateBanner" asp-controller="Banner" asp-area="Admin" class="btn btn-outline-primary">Yeni Banner Ekle</a>



