@model List<ResultBlogCategoryDto>
@{
    ViewData["Title"] = "Blog Kategori Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>
                <button onclick="deleteBlogCategory(@item.BlogCategoryID)" class="btn btn-outline-danger">Sil</button>
            </td>
            <td>
                <a asp-action="UpdateBlogCategory" asp-controller="BlogCategory" asp-area="Admin" asp-route-id="@item.BlogCategoryID" class="btn btn-outline-success">Güncelle</a>
            </td>

        </tr>
    }
</table>

<br />
<a asp-action="CreateBlogCategory" asp-controller="BlogCategory" asp-area="Admin" class="btn btn-outline-primary">Yeni Blog Kategorisi Ekle</a>


<script>

    function deleteBlogCategory(id) {



        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/Admin/BlogCategory/DeleteBlogCategory/" + id;

            }
        });

    }

</script>